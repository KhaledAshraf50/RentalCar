@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        function editReview(reviewId) {
            $.ajax({
                url: '@Url.Action("EditReview", "User")/' + reviewId,
                type: 'GET',
                success: function(review) {
                    $('#editReviewId').val(review.reviewId);
                    $('#editComment').val(review.comment);
                    $('#editRating').val(review.rating);

                    // Set star rating
                    $('.star-rating .star').removeClass('active');
                    $('.star-rating .star').each(function() {
                        const value = $(this).data('value');
                        if (value <= review.rating) {
                            $(this).addClass('active');
                        }
                    });

                    $('#editReviewModal').fadeIn();
                }
            });
        }

        // Star rating functionality
        $('.star-rating .star').on('click', function() {
            const rating = $(this).data('value');
            $('#editRating').val(rating);

            $('.star-rating .star').removeClass('active');
            $('.star-rating .star').each(function() {
                const value = $(this).data('value');
                if (value <= rating) {
                    $(this).addClass('active');
                }
            });
        });

        function deleteReview(reviewId) {
            if (confirm('Are you sure you want to delete this review?')) {
                $.ajax({
                    url: '@Url.Action("DeleteReview", "User")',
                    type: 'POST',
                    data: { id: reviewId },
                    headers: {
                        'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                    },
                    success: function(response) {
                        if (response.success) {
                            $('#review-' + reviewId).fadeOut(function() {
                                $(this).remove();
                                if ($('.review-card').length === 0) {
                                    location.reload();
                                }
                            });
                        } else {
                            alert(response.message || 'Failed to delete review');
                        }
                    },
                    error: function() {
                        alert('An error occurred. Please try again.');
                    }
                });
            }
        }

        $('#editReviewForm').on('submit', function(e) {
            e.preventDefault();

            $.ajax({
                url: $(this).attr('action'),
                type: 'POST',
                data: $(this).serialize(),
                headers: {
                    'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                },
                success: function(response) {
                    if (response.success) {
                        location.reload();
                    } else {
                        alert('Failed to update review');
                    }
                },
                error: function() {
                    alert('An error occurred. Please try again.');
                }
            });
        });
    </script>
    <script>
        function closeAlert(){
            const alert = document.getElementById("successAlert");
            if(alert){
                alert.classList.add("hide");
                setTimeout(()=>alert.remove(),300)
            }
        }
        // Auto close after 4 seconds
        setTimeout(()=>{
            closeAlert();
        },4000)
    </script>
}