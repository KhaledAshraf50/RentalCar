@model CarRental.ViewModels.CarViewModel

@{
    Layout = "_UserDashboard";
    ViewData["Title"] = "Add New Car";
}

@section styles {
    <link rel="stylesheet" href="~/style/addCar.css">
}

<main class="dashboard-content">
    <header class="content-header">
        <h1>Add New Car</h1>
        <p>Fill in details to list a new car for booking, including pricing, availability, and car specifications.</p>
    </header>

    <form asp-action="AddCarRequest" asp-controller="User" method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="CarId" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="upload-section">
            <div class="upload-box">
                <input type="file" id="car-image" name="ImageFile" accept="image/*" hidden>
                <label for="car-image" id="image-label">
                    <img src="~/imgs/upload-cloud.svg" alt="Upload">
                    <span>Upload Car Image</span>
                </label>
            </div>
            <p>Upload a picture of your car (JPG, PNG - max 5MB)</p>
            <span asp-validation-for="ImageFile" class="text-danger"></span>
        </div>

        <div class="form-grid">
            <div class="form-group">
                <label asp-for="Brand">Brand</label>
                <input asp-for="Brand" class="form-control" placeholder="e.g. BMW, Mercedes, Audi...">
                <span asp-validation-for="Brand" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Model">Model</label>
                <input asp-for="Model" class="form-control" placeholder="e.g. X5, E-Class, M4...">
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Year">Year</label>
                <input asp-for="Year" class="form-control" placeholder="2025">
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DailyPrice">Daily Price ($)</label>
                <input asp-for="DailyPrice" class="form-control" placeholder="100">
                <span asp-validation-for="DailyPrice" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CategoryId">Category</label>
                <select asp-for="CategoryId" asp-items="Model.Categories" class="form-control">
                    <option value="">Select Category</option>
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Transmission">Transmission</label>
                <select asp-for="Transmission" asp-items="Model.Transmissions" class="form-control">
                </select>
            </div>

            <div class="form-group">
                <label asp-for="FuelType">Fuel Type</label>
                <select asp-for="FuelType" asp-items="Model.FuelTypes" class="form-control">
                </select>
            </div>

            <div class="form-group">
                <label asp-for="SeatingCapacity">Seating Capacity</label>
                <input asp-for="SeatingCapacity" class="form-control" placeholder="5">
                <span asp-validation-for="SeatingCapacity" class="text-danger"></span>
            </div>

            <div class="form-group full-width">
                <label asp-for="LocationId">Location</label>
                <select asp-for="LocationId" asp-items="Model.Locations" class="form-control">
                    <option value="">Select Location</option>
                </select>
                <span asp-validation-for="LocationId" class="text-danger"></span>
            </div>

            <div class="form-group full-width">
                <label asp-for="FeatureIds">Features</label>
                <select asp-for="FeatureIds" asp-items="Model.Features" class="form-control" multiple>
                </select>
                <small>Hold Ctrl/Cmd to select multiple features</small>
            </div>

            <div class="form-group full-width">
                <label asp-for="Description">Description</label>
                <textarea asp-for="Description" rows="4" class="form-control"
                          placeholder="Describe your car, its condition, and any notable details..."></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>

        <div class="form-actions">
            <button type="submit" class="submit-btn">
                <span class="check-icon">✓</span> List Your Car
            </button>
            <a asp-action="ManageCar" asp-controller="Admin" class="cancel-btn">Cancel</a>
        </div>
    </form>
</main>

@section Scripts {
    <script>
        // Preview image before upload
        document.getElementById('car-image').addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    const label = document.getElementById('image-label');
                    label.innerHTML = `<img src="${e.target.result}" style="max-width: 100%; max-height: 200px; object-fit: contain;">`;
                }
                reader.readAsDataURL(file);
            }
        });
    </script>
}