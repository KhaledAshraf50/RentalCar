    <script>
                $(document).on('click', '.require-login-fav', function (e) {

            e.preventDefault();
            e.stopPropagation(); // عشان ميخش على CarDetails

            var isLoggedIn = '@userId';
            var button = $(this);
            var form = button.closest('form');

            if (!isLoggedIn || isLoggedIn === '') {

                loadLoginForm();
                document.getElementById("authModal").style.display = "flex";

            } else {

                form.submit(); // المستخدم عامل Login → نفذ Toggle

            }
        });
    </script>
